@model Income
<form method="post" id="editForm" asp-action="PostEdit" >
    
    <div class="border p-3">
        <div asp-validation-summary="All"></div>
        <div class="form-floating py-2">
            <input asp-for="Source" class="form-control border-0 shadow" />
            <label asp-for="Source" class="ms-2">Source</label>

        </div>
        <div class="form-floating py-2 col-12">
            <textarea asp-for="Amount" class="form-control border-0 shadow"></textarea>
            <label asp-for="Amount" class="ms-2">Amount</label>

        </div>
        
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to homepage
                </a>
            </div>
</form>