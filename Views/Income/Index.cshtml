@model IEnumerable<Income>
@{
    ViewData["Title"] = "Income";
}
<div class="container mt-5">
    <div class="table-wrapper">
        <div class="table-title pb-4">
            <div class="row mt-3 align-items-center">
                <div class="col-sm-6">
                    <h2>Income</h2>
                </div>
                <div class="col-sm-6 d-flex justify-content-end align-items-center">
                    <a asp-controller="Income" asp-action="Create" class="btn btn-primary text-uppercase align-items-center">
                        <i class="bi bi-plus-circle me-2"></i>Add new item
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover" aria-describedby="table">
            <thead>
                <tr>
                    <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["SourceSortParm"]">@Html.DisplayNameFor(model => model.Source) <i class="bi bi-arrow-down-square"></i></a>
                    </th>
                    <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AmountSortParm"]">@Html.DisplayNameFor(model => model.Amount)<i class="bi bi-arrow-down-square"></i></a>
                    </th>
                    @* <th>@Html.DisplayNameFor(model => model.Source)</th>
                    <th>@Html.DisplayNameFor(model => model.Amount)</th> *@
                    <th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Source</td>
                        <td>@obj.Amount</td>

                        <td>
                            <a class="edit" asp-action="Edit" asp-route-id="@obj.IncomeID"><i class="bi bi-pen-fill"></i></a>
                            <a class="delete" asp-action="Delete" asp-route-id="@obj.IncomeID"><i class="bi bi-trash3-fill"></i></a>
                        </td>
                    </tr>
                }    
                </tbody>
        </table>
    </div>
</div>
