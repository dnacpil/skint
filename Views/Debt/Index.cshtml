@model IEnumerable<Debt>
@{
    ViewData["Title"] = "Debt";
}
<div class="container mt-5">
    <div class="table-wrapper">
        <div class="table-title pb-4">
            <div class="row mt-3 align-items-center">
                <div class="col-sm-6">
                    <h2>Debt ðŸ¥² </h2>
                </div>
                <div class="col-sm-6 d-flex justify-content-end align-items-center">
                    <a asp-controller="Debt" asp-action="Create" class="btn btn-primary text-uppercase align-items-center">
                        <i class="bi bi-plus-circle me-2"></i>Add new item
                    </a>
                </div>
            </div>
        </div>
        
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="Search" class="btn btn-default" /> |
                    <a asp-action="Index">Back to Full List</a>
                </p>
            </div>
        </form>

        <table class="table table-striped table-hover" aria-describedby="table">
            <thead>
                <tr>
                    <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DescriptionSortParm"]">@Html.DisplayNameFor(model => model.Description) <i class="bi bi-arrow-down-square"></i></a>
                    </th>
                    <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AmountOwedSortParm"]">@Html.DisplayNameFor(model => model.AmountOwed)<i class="bi bi-arrow-down-square"></i></a>
                    </th>
                    <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DueSortParm"]">@Html.DisplayNameFor(model => model.Due)<i class="bi bi-arrow-down-square"></i></a>
                    </th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Description</td>
                        <td>@obj.AmountOwed</td>
                        <td>@obj.Due</td>

                        <td>
                            <a class="edit" asp-action="Edit" asp-route-id="@obj.DebtID"><i class="bi bi-pen-fill"></i></a>
                            <a class="delete" asp-action="Delete" asp-route-id="@obj.DebtID"><i class="bi bi-trash3-fill"></i></a>
                        </td>
                    </tr>
                }    
                </tbody>
        </table>
    </div>
</div>
