@model Debt
<form method="post" id="editForm" asp-action="PostEdit" asp-route-id="@Model.DebtID">
    <input type="hidden" asp-for="DebtID"/>
    <div class="border p-3">
        <div asp-validation-summary="All"></div>
        <div class="form-floating py-2">
            <input asp-for="Description" class="form-control border-0 shadow" />
            <label asp-for="Description" class="ms-2">Description</label>

        </div>
        <div class="form-floating py-2 col-12">
            <textarea asp-for="AmountOwed" class="form-control border-0 shadow"></textarea>
            <label asp-for="AmountOwed" class="ms-2">Amount Owed</label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Due" class="form-control border-0 shadow" />
            <label asp-for="Due" class="ms-2"></label>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to homepage
                </a>
            </div>
</form>