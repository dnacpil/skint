@model Debt

<div class="card-body p-4">
    <form method="POST" class="row" asp-action="PostDelete" asp-route-id="@Model.DebtID">
        <input asp-for="DebtID" hidden />
        <div class="form-floating py-2 col-12">
            <input asp-for="Description" class="form-control border-0 shadow">
            <label asp-for="Description" class="ms-2"></label>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to homepage
                </a>
            </div>
    </form>
</div>