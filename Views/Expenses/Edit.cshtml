@model Expenses
<form method="post" id="editForm" asp-action="PostEdit" asp-route-id="@Model.ExpenseID">
    <input type="hidden" asp-for="ExpenseID" /> 
    
    <div class="border p-3">
        <div asp-validation-summary="All"></div>
        <div class="form-floating py-2">
            <ejs-textbox id="Description" placeholder="Description" ejs-for="Description" value="Description"></ejs-textbox>

        </div>
        <div class="form-floating py-2 col-12">
            <textarea asp-for="Cost" class="form-control border-0 shadow"></textarea>
            <label asp-for="Cost" class="ms-2"></label>

        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Due" class="form-control border-0 shadow" />
            <label asp-for="Due" class="ms-2"></label>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to homepage
                </a>
            </div>
</form>