@model Expenses

<div class="card-body p-4">
    <form method="POST" class="row" asp-action="Create" enctype="multipart/form-data">

        <div class="form-floating py-2 col-12">
            <input asp-for="Description" class="form-control border-0 shadow">
            <label asp-for="Description" class="ms-2">Description</label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Cost" class="form-control border-0 shadow">
            <label asp-for="Cost" class="ms-2">Cost</label>
        </div>
        <div class="form-floating py-2 col-12">
            <input asp-for="Due" class="form-control border-0 shadow">
            <label asp-for="Due" class="ms-2">When this is due...</label>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Add a source of income</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary border  form-control">
                    Back to homepage
                </a>
            </div>
    </form>
</div>