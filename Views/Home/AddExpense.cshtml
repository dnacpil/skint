@model Expenses
<div class="card-body p-4">
    <form method="post" class="row" asp-action="Create" enctype="multipart/form-data">

        <div class="form-floating py-2 col-12">
            <input asp-for="Description" class="form-control border-0 shadow">
            <label asp-for="Description" class="ms-2"></label>
        </div>
        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Add an expense</button>
            </div>
    </form>
</div>